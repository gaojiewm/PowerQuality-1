<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorwhite"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/set_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_12"
        android:background="@drawable/set_top_button_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wir_icon" />

        <TextView
            android:id="@+id/set_caluc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:text="@string/set_wir"
            android:textColor="@color/set_fragment_top_title_color"
            android:textSize="@dimen/textsize_30" />
    </LinearLayout>


    <com.cem.powerqualityanalyser.view.AmountViewHorizontal
        android:id="@+id/set_wir_amountview"
        android:layout_below="@+id/set_top_view"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_77"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/set_wir_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_wir_amountview"
        android:layout_marginLeft="@dimen/dimen_130"
       >

        <ImageView
            android:id="@+id/set_wir_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/set_wir_imv"
            android:layout_marginLeft="123dp"
            android:paddingBottom="18.8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/set_wir_cir1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/set_wir_color1" />

            <ImageView
                android:id="@+id/set_wir_cir2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/set_wir_color2" />

            <ImageView
                android:id="@+id/set_wir_cir3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/set_wir_color3" />

            <ImageView
                android:id="@+id/set_wir_cir4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/set_wir_color4" />

            <ImageView
                android:id="@+id/set_wir_cir5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:src="@mipmap/set_wir_color1" />

            <ImageView
                android:id="@+id/set_wir_cir6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.2dp"
                android:src="@mipmap/set_wir_color2" />

            <ImageView
                android:id="@+id/set_wir_cir7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/set_wir_color3" />

            <ImageView
                android:id="@+id/set_wir_cir8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.2dp"
                android:src="@mipmap/set_wir_color4" />

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/set_wir_tv"
        android:layout_below="@+id/set_wir_rl"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:textSize="@dimen/textsize_30"
        android:textColor="@color/set_text_color"
        android:layout_height="wrap_content"/>


    <com.cem.powerqualityanalyser.view.RightModeView
        android:id="@+id/set_wir_rightmodeview"
        android:layout_centerVertical="true"
        android:nextFocusLeft="@id/set_wir_amountview"
        android:layout_toRightOf="@+id/set_wir_rl"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_width="194dp"
        android:layout_height="wrap_content"/>



</RelativeLayout>