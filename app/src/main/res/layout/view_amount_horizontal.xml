<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/public_view_margin"
    android:paddingRight="@dimen/public_view_margin">

    <RelativeLayout
        android:id="@+id/amount_layout"
        android:focusableInTouchMode="true"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_amount"
        android:gravity="center_vertical"
       >

        <ImageView
            android:id="@+id/amount_increase_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/amount_left" />

        <ImageView
            android:id="@+id/amount_dncrease_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/amount_right" />

        <TextView
            android:id="@+id/amount_tv_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/amount_increase_horizontal"
            android:layout_toLeftOf="@+id/amount_dncrease_horizontal"
            android:gravity="center"
            android:text="1"
            android:textSize="25sp" />

    </RelativeLayout>

</LinearLayout>
